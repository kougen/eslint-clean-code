{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "sourceMap": true,
    "types": ["jest"],
  },
  "include": ["src/**/*", "**/*.test.ts"],
  "exclude": ["node_modules"]
}